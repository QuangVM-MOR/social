// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id                Int               @id @default(autoincrement())
  account           String            @unique
  password          String
  name              String
  email             String           @unique
  avatar            String?
  date_of_birth     DateTime?
  description       String?
  
  posts             Post[]
  post_reactions    PostReaction[]
  comments          Comment[]
  comment_reactions CommentReaction[]
  bookmarks         Bookmark[]
}

model Post {
  id                Int               @id @default(autoincrement())
  user_id           Int
  content           String
  create_time       DateTime          @default(now())
  modify_time       DateTime          @updatedAt

  user              User              @relation(fields: [user_id], references: [id])
  post_reactions    PostReaction[]
  comments          Comment[]
  bookmarks         Bookmark[]
}

model Comment {
  id                Int               @id @default(autoincrement())
  content           String
  user_id           Int
  post_id           Int
  create_time       DateTime          @default(now())
  modify_time       DateTime          @updatedAt

  user              User              @relation(fields: [user_id], references: [id])
  post              Post              @relation(fields: [post_id], references: [id])
  comment_reactions CommentReaction[]
}

model TypeReaction {
  id                Int               @id @default(autoincrement())
  type              String            @unique
  name              String
  icon              String

  comment_r CommentReaction[]
  post_r PostReaction[]
}

model CommentReaction {
  user_id           Int
  comment_id        Int
  type_reaction     String
  user              User              @relation(fields: [user_id], references: [id])
  comment           Comment           @relation(fields: [comment_id], references: [id])
  reactionComment     TypeReaction      @relation(fields: [type_reaction], references: [type])
  
  @@id([user_id, comment_id])
}

model PostReaction {
  user_id           Int
  post_id           Int
  type_reaction     String
  user              User              @relation(fields: [user_id], references: [id])
  post              Post              @relation(fields: [post_id], references: [id])
  reactionPost     TypeReaction      @relation(fields: [type_reaction], references: [type])
  
  @@id([user_id, post_id])
}

model Bookmark {
  user_id           Int
  post_id           Int
  user              User              @relation(fields: [user_id], references: [id])
  post              Post              @relation(fields: [post_id], references: [id])
  @@id([user_id, post_id])
}




